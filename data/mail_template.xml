<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <data>

    <record id="mail_warn_user" model="mail.template">
      <field name="name">Warn partner of a payment issue</field>
      <field name="email_from">${object.partner_id.company_id.email or '' | safe}</field>
      <field name="subject">${object.project_id.company_id.name}: rejected payment</field>
      <field name="model_id" ref="project_issue.model_project_issue"/>
      <field name="partner_to" >${object.partner_id.id}</field>
      <field name="auto_delete" eval="False"/>
      <field name="body_html"><![CDATA[
<div style="background:#F0F0F0;color:#515166;padding:10px 0px;font-family:Arial,Helvetica,sans-serif;font-size:14px;">
  <table style="width:600px;margin:5px auto;">
    <tbody>
      <tr>
        <td>
          <a href="/"><img src="/web/binary/company_logo" style="vertical-align:baseline;max-width:100px;"></a>
        </td>
        <td style="text-align:right;vertical-align:middle;">
          Satisfaction Survey
        </td>
      </tr>
    </tbody>
  </table>
  <table style="width:600px;margin:0px auto;background:white;border:1px solid #e1e1e1;">
    <tbody>
      <tr>
        <td style="padding:15px 20px 10px 20px;">
          <p>Hello,</p>
          <br>
          <p>Your payment of invoice number %{object.invoice_id.number} as been rejected.</p>
          <p>Next attempt will occur in the coming days.
            Please contact us quickly in case you think this new payment could be rejected too,
            to avoid bank fees to all parties.</p>
        </td>
      </tr>
    </tbody>
  </table>
  <p>Email automatically sent by <a href="${object.project_id.company_id.website}" style="color:#875A7B;">${object.project_id.company_id.name}</a></p>
</div>
]]>
    </field>
  </record>

    <record id="mail_max_trial" model="mail.template">
      <field name="name">Max Slimpay payment trials reached</field>
      <field name="email_from">${object.partner_id.company_id.email or '' | safe}</field>
      <field name="subject">${object.project_id.company_id.name}: max payment trials reached</field>
      <field name="model_id" ref="project_issue.model_project_issue"/>
      <field name="partner_to" >${object.partner_id.id}</field>
      <field name="auto_delete" eval="False"/>
      <field name="body_html"><![CDATA[
      <p>Max trial number reached for payment issue ${object.name} id ${object.id}.</p>
      ]]>
      </field>
  </record>

  </data>

</odoo>
