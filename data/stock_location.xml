<odoo>

  <data>

    <record id="stock_location_available_for_rent" model="stock.location">
      <field name="name">Devices available for rent</field>
      <field name="usage">view</field>
      <field name="partner_id">1</field>
      <field name="location_id" eval="ref('stock.stock_location_stock')"/>
    </record>

    <record id="stock_location_fp3_new" model="stock.location">
      <field name="name">New Fairphone 3</field>
      <field name="usage">internal</field>
      <field name="partner_id">1</field>
      <field name="location_id" ref="stock_location_available_for_rent"/>
    </record>

    <record id="stock_location_fp3_repackaged" model="stock.location">
      <field name="name">Repackaged Fairphone 3</field>
      <field name="usage">internal</field>
      <field name="partner_id">1</field>
      <field name="location_id" ref="stock_location_available_for_rent"/>
    </record>

    <record id="stock_location_fp3_to_check" model="stock.location">
      <field name="name">Fairphone 3/3+ to check/ diagnose</field>
      <field name="usage">internal</field>
      <field name="partner_id">1</field>
    </record>

    <record id="stock_location_fp3_outsourced_repair" model="stock.location">
      <field name="name">Fairphone 3/3+ waiting for an outsourced repair</field>
      <field name="usage">internal</field>
      <field name="partner_id">1</field>
    </record>

    <record id="stock_location_supplier_scrap" model="stock.location">
      <field name="name">Supplier scrap location</field>
      <field name="usage">inventory</field>
      <field name="scrap_location">True</field>
      <field name="location_id" ref="stock.stock_location_suppliers"/>
    </record>

  </data>

</odoo>
