<?xml version="1.0" encoding="utf-8"?>

<odoo>

  <record model="ir.ui.view" id="account_analytic_account_recurring_form_form">
    <field name="name">Contract form</field>
    <field name="model">account.analytic.account</field>
    <field name="inherit_id" ref="contract.account_analytic_account_recurring_form_form"/>
    <field name="arch" type="xml">

      <xpath expr="//group[@name='main']" position="after">
        <notebook name="issue_related">
          <page name="related_issues" string="Related issues">
            <group>
              <field name="contractual_issue_ids" readonly="1">
                <tree default_order="project_id, penalty_exemption, contractual_issue_date desc, contractual_issue_type, stage_id, name">
                  <field name="project_id"/>
                  <field name="name"/>
                  <field name="contractual_issue_date"/>
                  <field name="contractual_issue_type"/>
                  <field name="penalty_exemption"/>
                  <field name="stage_id"/>
                </tree>
              </field>
              <field name="other_issue_ids" readonly="1">
                <tree default_order="project_id, create_date, stage_id, name">
                  <field name="project_id"/>
                  <field name="name"/>
                  <field name="stage_id"/>
                  <field name="create_date"/>
                </tree>
              </field>
            </group>
          </page>
        </notebook>
      </xpath>

    </field>
  </record>

</odoo>
