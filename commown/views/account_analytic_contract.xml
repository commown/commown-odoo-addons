<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="account_analytic_contract_view_form" model="ir.ui.view">
        <field name="name">Commown Contract Template</field>
        <field name="model">account.analytic.contract</field>
        <field name="inherit_id"
               ref="contract_payment_auto.account_analytic_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_auto_pay']">
              <group>
                <field name="transaction_label"/>
              </group>
            </xpath>
        </field>
    </record>

    <record id="account_analytic_contract_line_view_form" model="ir.ui.view">
      <field name="name">Account Analytic Contract Line Form View</field>
      <field name="model">account.analytic.contract.line</field>
        <field name="inherit_id"
               ref="contract_variable_discount.account_analytic_contract_line_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='Discount']" position="before">
              <group name="Quantity">
                <field name="qty_type"/>
                <field name="qty_formula_id"/>
              </group>
            </xpath>
        </field>
    </record>

</odoo>
