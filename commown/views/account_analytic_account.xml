<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="account_analytic_account_recurring_form_form"
          model="ir.ui.view">
    <field name="name">Commown contract</field>
    <field name="model">account.analytic.account</field>
    <field name="inherit_id"
           ref="contract_payment_auto.account_analytic_account_recurring_form_form"/>
    <field name="arch" type="xml">
      <xpath expr="//label[@for='recurring_invoice_line_ids']" position="before">
        <group name="transaction"
               attrs="{'invisible': [('is_auto_pay', '=', False)]}">
          <field name="transaction_label"/>
        </group>
      </xpath>
    </field>
  </record>

  <record id="view_contract_list" model="ir.ui.view">
    <field name="name">Commown Contract list</field>
    <field name="model">account.analytic.account</field>
    <field name="inherit_id" ref="contract.view_account_analytic_account_journal_tree" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='journal_id']" position="replace"></xpath>
      <xpath expr="//field[@name='code']" position="replace"></xpath>
      <xpath expr="//field[@name='payment_mode_id']" position="replace"></xpath>
      <xpath expr="//field[@name='recurring_next_date']" position="after">
        <field name="date_start"/>
        <field name="min_contract_end_date"/>
        <field name="date_end"/>
      </xpath>
    </field>
  </record>

  <record id="account_analytic_invoice_line_view_form" model="ir.ui.view">
    <field name="name">Account Analytic Invoice Line Form View</field>
    <field name="model">account.analytic.invoice.line</field>
    <field name="inherit_id"
           ref="contract_variable_discount.account_analytic_invoice_line_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group[@name='Discount']" position="before">
        <group name="Quantity">
          <field name="qty_type"/>
          <field name="qty_formula_id"/>
        </group>
      </xpath>
    </field>
  </record>

</odoo>
