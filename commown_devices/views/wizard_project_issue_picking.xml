<odoo>

  <record id="wizard_project_issue_outward_picking_form" model="ir.ui.view">
    <field name="name">[commown] Project issue outward picking creation form view</field>
    <field name="model">project.issue.outward.picking.wizard</field>
    <field name="arch" type="xml">
      <form string="Send a device">
        <sheet>
          <group>
            <field name="issue_id" invisible="1"/>
            <field name="date"/>
            <field name="product_id" options="{'no_create': True}"/>
            <field name="lot_id" options="{'no_create': True}"/>
          </group>
        </sheet>
        <footer>
          <button name="create_picking" string="OK" class="btn-primary" type="object"/>
          or
          <button string="Cancel" class="btn-default" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="wizard_project_issue_inward_picking_form" model="ir.ui.view">
    <field name="name">[commown] Project issue inward picking creation form view</field>
    <field name="model">project.issue.inward.picking.wizard</field>
    <field name="arch" type="xml">
      <form string="Receive a device">
        <sheet>
          <group>
            <field name="issue_id" invisible="1"/>
            <field name="date"/>
            <field name="lot_id"/>
          </group>
        </sheet>
        <footer>
          <button name="create_picking" string="OK" class="btn-primary" type="object"/>
          or
          <button string="Cancel" class="btn-default" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="wizard_project_issue_contract_transfer_form" model="ir.ui.view">
    <field name="name">[commown] Project issue contract transfer creation form view</field>
    <field name="model">project.issue.contract_transfer.wizard</field>
    <field name="arch" type="xml">
      <form string="Transfer device to new contract">
        <sheet>
          <group>
            <field name="issue_id" invisible="1"/>
            <field name="contract_id"/>
            <field name="date"/>
          </group>
        </sheet>
        <footer>
          <button name="create_transfer" string="OK" class="btn-primary" type="object"/>
          or
          <button string="Cancel" class="btn-default" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>
