<odoo>

  <record id="wizard_project_task_picking_form" model="ir.ui.view">
    <field name="name">[commown] Project task picking creation form view</field>
    <field name="model">project.task.picking.wizard</field>
    <field name="arch" type="xml">
      <form string="Move involved device">
        <sheet>
          <group>
            <field name="task_id" invisible="1"/>
            <field name="location_dest_id"/>
            <field name="date"/>
          </group>
        </sheet>
        <footer>
          <button name="create_picking" string="OK" class="btn-primary" type="object"/>
          or
          <button string="Cancel" class="btn-default" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>
