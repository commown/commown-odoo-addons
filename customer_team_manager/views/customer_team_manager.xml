<odoo>

  <record id="view_team_tree" model="ir.ui.view">
    <field name="name">customer_team_manager.team.tree</field>
    <field name="model">customer_team_manager.team</field>
    <field name="arch" type="xml">
      <tree>
        <field name="full_name"/>
        <field name="company"/>
      </tree>
    </field>
  </record>

  <record id="view_employee_tree" model="ir.ui.view">
    <field name="name">customer_team_manager.employee.tree</field>
    <field name="model">customer_team_manager.employee</field>
    <field name="arch" type="xml">
      <tree>
        <field name="firstname"/>
        <field name="lastname"/>
        <field name="email"/>
        <field name="phone"/>
        <field name="team"/>
        <field name="partner"/>
        <field name="company"/>
        <field name="portal_status"/>
      </tree>
    </field>
  </record>

  <record id="view_team_form" model="ir.ui.view">
    <field name="name">customer_team_manager.team.form</field>
    <field name="model">customer_team_manager.team</field>
    <field name="arch" type="xml">
      <form string="Teams">
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="display_name" class="oe_inline"/>
            </h1>
          </div>
          <group name="admin" groups="customer_team_manager.group_manager">
            <field name="company"/>
          </group>
          <group name="main">
            <field name="name"/>
            <field name="parent_team"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_employee_form" model="ir.ui.view">
    <field name="name">customer_team_manager.employee.form</field>
    <field name="model">customer_team_manager.employee</field>
    <field name="arch" type="xml">
      <form string="Employees">
        <header>
          <button
              string="Grant portal access"
              class="oe_highlight"
              name="action_grant_portal_access"
              type="object"
              attrs="{'invisible': ['|', ('portal_status', '!=', 'not_granted'), ('active', '=', False)]}"
              />
          <button
              string="Revoke portal access"
              name="action_revoke_portal_access"
              type="object"
              attrs="{'invisible': ['|', ('portal_status', '=', 'not_granted'), ('active', '=', False)]}"
              />
          <field name="portal_status" widget="statusbar"/>
        </header>
        <sheet>
          <div class="oe_button_box" name="button_box">
            <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
              <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
            </button>
          </div>
          <div class="oe_title">
            <h1>
              <field name="display_name" class="oe_inline"/>
            </h1>
          </div>
          <group name="admin" groups="customer_team_manager.group_manager">
            <group>
              <field name="company"/>
            </group>
            <group>
              <field name="partner"/>
            </group>
          </group>
          <group>
            <group name="main">
              <field name="firstname"/>
              <field name="lastname"/>
            </group>
            <group name="contact">
              <field
                  name="email"
                  attrs="{'readonly': [('portal_status', '!=', 'not_granted')]}"
                  help="Cannot be modified when employee was granted portal access"
                  />
              <field name="phone"/>
            </group>
            <group name="team">
              <field name="team"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_teams" model="ir.actions.act_window">
    <field name="name">Teams</field>
    <field name="res_model">customer_team_manager.team</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="view_id" ref="view_team_tree"/>
  </record>

  <record id="action_employees" model="ir.actions.act_window">
    <field name="name">Employees</field>
    <field name="res_model">customer_team_manager.employee</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="view_id" ref="view_employee_tree"/>
  </record>

  <menuitem id="menu_customer_team_manager_root"
            name="Team manager"
            web_icon="customer_team_manager,static/description/icon.png"
            groups="group_customer_admin,group_manager"/>

  <menuitem id="menu_team"
            action="action_teams"
            sequence="20"
            parent="menu_customer_team_manager_root"/>

  <menuitem id="menu_employees"
            action="action_employees"
            sequence="10"
            parent="menu_customer_team_manager_root"/>

</odoo>
