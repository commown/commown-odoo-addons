<odoo noupdate="1">

  <record model="ir.rule" id="team_customer_rule">
    <field name="name">Customer Team Manager: see only own teams</field>
    <field name="model_id" ref="model_customer_team_manager_team"/>
    <field name="groups" eval="[(4, ref('customer_team_manager.group_customer_admin'))]"/>
    <field name="domain_force">[('company', '=', user.commercial_partner_id.id)]</field>
  </record>

  <record model="ir.rule" id="employee_customer_rule">
    <field name="name">Customer Team Manager: see only own employees</field>
    <field name="model_id" ref="model_customer_team_manager_employee"/>
    <field name="perm_unlink">False</field>
    <field name="groups" eval="[(4, ref('customer_team_manager.group_customer_admin'))]"/>
    <field name="domain_force">[('company', '=', user.commercial_partner_id.id)]</field>
  </record>

  <record model="ir.rule" id="ir_exports_rule">
    <field name="name">Customer Team Manager: see only own exports</field>
    <field name="model_id" ref="base.model_ir_exports"/>
    <field name="groups" eval="[(4, ref('customer_team_manager.group_customer_admin'))]"/>
    <field name="domain_force">[('create_uid','=', user.id)]</field>
  </record>

  <record model="ir.rule" id="ir_exports_line_rule">
    <field name="name">Customer Team Manager: see only own export lines</field>
    <field name="model_id" ref="base.model_ir_exports_line"/>
    <field name="groups" eval="[(4, ref('customer_team_manager.group_customer_admin'))]"/>
    <field name="domain_force">[('create_uid','=', user.id)]</field>
  </record>

  <record model="ir.rule" id="base_import_mapping_rule">
    <field name="name">Customer Team Manager: see only own import mappings</field>
    <field name="model_id" ref="base_import.model_base_import_mapping"/>
    <field name="groups" eval="[(4, ref('customer_team_manager.group_customer_admin'))]"/>
    <field name="domain_force">[('create_uid','=', user.id)]</field>
  </record>

</odoo>
