<odoo>

  <record id="group_customer_admin" model="res.groups">
    <field name="name">Team manager Customer</field>
    <field name="category_id" ref="base.module_category_manager_customer"/>
    <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
  </record>

  <record id="group_customer_accounting" model="res.groups">
    <field name="name">Accounting Customer</field>
    <field name="category_id" ref="base.module_category_manager_customer"/>
    <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
  </record>

  <record id="group_manager" model="res.groups">
    <field name="name">Customer internal manager</field>
    <field name="category_id" ref="base.module_category_manager_customer"/>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    <field name="users" eval="[(4, ref('base.user_admin'))]"/>
  </record>

</odoo>
