<odoo>

  <record id="customer_role_admin" model="customer_team_manager.employee.role">
    <field name="name">Administration</field>
    <field name="description">People who can grant roles to others in their organization</field>
    <field name="groups" eval="[(6, 0, [ref('group_customer_admin')])]"/>
  </record>

  <record id="customer_role_accounting" model="customer_team_manager.employee.role">
    <field name="name">Accounting</field>
    <field name="description">People who have access to the orders and the invoices of their organization</field>
    <field name="groups" eval="[(6, 0, [ref('customer_manager_base.group_customer_accounting')])]"/>
  </record>

  <record id="customer_role_it" model="customer_team_manager.employee.role">
    <field name="name">IT</field>
    <field name="description">People who have access to all assistance tickets of their organization</field>
    <field name="groups" eval="[(6, 0, [ref('customer_manager_base.group_customer_it_support')])]"/>
  </record>

  <record id="customer_role_fleet_manager" model="customer_team_manager.employee.role">
    <field name="name">Fleet managment</field>
    <field name="description">People who manage the device fleet of their organization (new orders, contract termination, device attribution)</field>
    <field name="groups" eval="[(6, 0, [ref('customer_manager_base.group_customer_contract_manager'), ref('customer_manager_base.group_customer_purchase')])]"/>
  </record>

  <record id="customer_role_user" model="customer_team_manager.employee.role">
    <field name="name">Employee</field>
    <field name="description">People who benefit from the assistance</field>
  </record>

</odoo>
