<odoo>

    <record id="action_create_admin" model="ir.actions.server">
      <field name="name">[commown] Create customer admin</field>
      <field name="model_id" ref="base.model_res_partner"/>
      <field name="binding_model_id" ref="base.model_res_partner"/>
      <field name="groups_id" eval="[(6, 0, [ref('sales_team.group_sale_manager')])]"/>
      <field name="sequence">5</field>
      <field name="state">code</field>
      <field name="code">records.action_create_employee(admin=True)</field>
    </record>

    <record id="action_create_employee" model="ir.actions.server">
      <field name="name">[commown] Create customer employees</field>
      <field name="model_id" ref="base.model_res_partner"/>
      <field name="binding_model_id" ref="base.model_res_partner"/>
      <field name="groups_id" eval="[(6, 0, [ref('sales_team.group_sale_manager')])]"/>
      <field name="sequence">10</field>
      <field name="state">code</field>
      <field name="code">records.action_create_employee()</field>
    </record>

</odoo>
