<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="suggestion_cart" inherit_id="website_sale_require_login.suggestion_cart">
    <xpath expr="//a[@href='/web/login?redirect=/shop/checkout']" position="replace">
      <a t-if="not user_authenticated"
         class="btn btn-primary pull-right mb32"
         href="/web/login?redirect=/shop/checkout">
          <span>Authenticate and pay</span>
          <span class="fa fa-long-arrow-right"/>
      </a>
      <div class="pull-right">Â </div>
    </xpath>
    <xpath expr="//a[@href='/web/signup?redirect=/shop/checkout']" position="replace">
      <a class="btn btn-primary pull-right mb32"
         href="/web/signup?redirect=/shop/checkout">
          <span>Create an account and pay</span>
          <span class="fa fa-long-arrow-right"/>
      </a>
    </xpath>
  </template>

  <template id="cart_lines" inherit_id="website_sale.cart_lines">
    <xpath expr="//td[@t-if='line.product_id.product_tmpl_id']/div/a/strong/ancestor::div[1]" position="inside">
      <t t-if="line.product_id.product_tmpl_id.is_rental">
        <strong> - Deposit</strong>
      </t>
    </xpath>
  </template>

</odoo>
