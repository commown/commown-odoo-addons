<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="project_issue_form_view">
    <field name="name">commown_device.project.issue.form.view</field>
    <field name="model">project.issue</field>
    <field name="inherit_id" ref="commown_contractual_issue.project_issue_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet//group[@name='contract']" position="after">
        <group name="device">
          <field name="lot_id"/>
          <field name="contract_lot_ids" invisible="1"/>
        </group>
      </xpath>
    </field>
  </record>

</odoo>
