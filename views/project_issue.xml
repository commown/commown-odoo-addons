<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="project_issue_form_view">
        <field name="name">slimpay.project.issue.form.view</field>
        <field name="model">project.issue</field>
        <field name="inherit_id" ref="project_issue.project_issue_form_view"/>
        <field name="arch" type="xml">
          <xpath expr="//notebook" position="inside">
            <page string="Payment">
              <group>
                <field name="invoice_id"/>
                <field name="invoice_unpaid_count"/>
              </group>
            </page>
          </xpath>
        </field>
    </record>

    <record id="project_issue_kanban_view" model="ir.ui.view">
      <field name="name">slimpay.project.issue.kanban.view</field>
      <field name="model">project.issue</field>
      <field name="inherit_id" ref="project_issue.project_issue_kanban_view"/>
      <field name="arch" type="xml">
        <field name="stage_id" position="after">
          <field name="invoice_id" invisible="1"/>
          <field name="invoice_unpaid_count" invisible="1"/>
        </field>
        <xpath expr="//div[contains(@class, 'oe_kanban_bottom_right')]" position="inside">
          <div t-if="record.invoice_id" class="pull-left ml8 mr8 text-danger">
            <t t-esc="record.invoice_unpaid_count.value"/> <i class="fa fa-money"/>
          </div>
        </xpath>
      </field>
    </record>

</odoo>
