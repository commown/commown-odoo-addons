<?xml version="1.0" encoding="utf-8"?>

<odoo>

  <record model="ir.ui.view" id="account_analytic_contract_view_form">
    <field name="name">Contract form</field>
    <field name="model">account.analytic.account</field>
    <field name="inherit_id" ref="contract.account_analytic_account_recurring_form_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group[@name='main']" position="after">
        <group string="Stock">
          <field name="quant_ids" string="Devices">
            <tree>
              <field name="product_id"/>
              <field name="lot_id"/>
              <field name="location_id"/>
              <field name="in_date"/>
            </tree>
          </field>
          <field name="picking_ids" string="Pickings">
            <tree
                colors="red: state not in ('done', 'cancel'); grey: state == 'cancel'"
                default_order="date_done ASC, id ASC"
                >
              <field name="name"/>
              <field name="location_id"/>
              <field name="location_dest_id"/>
              <field name="min_date"/>
              <field name="date_done"/>
              <field name="state"/>
            </tree>
          </field>
        </group>
      </xpath>
    </field>
  </record>

</odoo>
