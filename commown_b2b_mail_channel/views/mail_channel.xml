<odoo>

  <data>

    <record model="ir.ui.view" id="view_mail_channel_form">
      <field name="name">mail.channel.form</field>
      <field name="model">mail.channel</field>
      <field name="inherit_id" ref="mail.mail_channel_view_form"/>
      <field name="arch" type="xml">
        <field name="description" position="after">
          <field name="company_ids" invisible="1"/>
          <field name="channel_type" invisible="1"/>
          <field name="company_id" options="{'no_create': True, 'open': True}" attrs="{'invisible': ['|', ('public', '!=', 'private'), ('channel_type', '!=', 'channel')]}"/>
        </field>
      </field>
    </record>

  </data>

</odoo>
